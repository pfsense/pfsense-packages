					<name>serialpos</name>
				</option>
				<option>
					<value>serialVFD</value>
					<name>serialVFD</name>
				</option>
				<option>
					<value>sli</value>
					<name>sli</name>
				</option>
				<option>
					<value>stv5730</value>
					<name>stv5730</name>
				</option>
				<option>
					<value>SureElec</value>
