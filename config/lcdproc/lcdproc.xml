				</option>
				<option>
					<value>5</value>
					<name>5 seconds</name>
				</option>
				<option>
					<value>10</value>
					<name>10 seconds</name>
				</option>
			</options>
			<default_value>5</default_value>
		</field>
	</fields>
	<custom_php_validation_command>
		validate_form_lcdproc($_POST, $input_errors);
	</custom_php_validation_command>
	<custom_php_resync_config_command>
		sync_package_lcdproc();
	</custom_php_resync_config_command>
</packagegui>
