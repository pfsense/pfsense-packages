				<option>
					<value>xosd</value>
					<name>xosd</name>
				</option>
			</options>
			<default_value>pyramid</default_value>
		</field>
		<field>
			<fieldname>refresh_frequency</fieldname>
			<fielddescr>Refresh frequency</fielddescr>
			<description>Set the refresh frequency of the information on the LCD Panel.</description>
			<type>select</type>
			<options>
				<option>
					<value>1</value>
					<name>1 second</name>
				</option>
				<option>
					<value>2</value>
					<name>2 seconds</name>
				</option>
